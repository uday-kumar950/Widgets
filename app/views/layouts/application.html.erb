<!DOCTYPE html>
<html>
  <head>
    <title>Widgets</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<div class="topnav">
		<a class="active" href="<%= widgets_path%>">Home</a>
		<div class="login-container" style="width: 30%">
			<% if current_user %>
				<span><%= link_to "Logged in as #{current_user.email}","#"%></span>
				<span><b><%= link_to "Log Out", logout_path %></b></span>
			<% else %>
				<%= link_to "Log In", login_path %>
				<%= link_to "Sign Up", signup_path %>  
			<% end %>

		</div>
	</div>
	<%if notice.present?%>
		<div class="alert alert-success">
			<%= notice %>
		</div>
	<%end%>

	<%if alert.present?%>
		<div class="alert alert-danger">
			<%= alert %>
		</div>
	<%end%>
  </head>

  <body>
  	<div class="container">
    	<%= yield %>
	</div>
  </body>
</html>
